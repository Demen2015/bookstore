<%= form_for :user, url: register_path do |f| %>
  <% if @user.errors.any? %>
    <div style="color:red">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
    </div>
  <% end %>

  <p>
    <%= f.label :username %><br>
    <%= f.email_field :username,class: 'form-control',style: 'width:30%;height:28px;' %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password,class: 'form-control',style: 'width:30%;height:28px;' %>
  </p>

 <p>
    <%= f.label :address %><br>
    <%= f.text_area :address,class: 'form-control',style: 'width:30%;height:100px;' %>
  </p>

 <p>
    <%= f.label :tel %><br>
    <%= f.text_field :tel ,class: 'form-control',style: 'width:30%;height:28px;'%>
  </p>

  <p>
    <%= f.submit "Save",class: 'btn btn-success',style: 'width:100px;'  %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>

